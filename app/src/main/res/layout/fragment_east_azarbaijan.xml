<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.city.EastAzarbaijanFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:fontFamily="@font/shabnam_medium"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/east_azarbaijan"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/recycler_east_azarbaijan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_iranlogy_city"/>

    </LinearLayout>

</FrameLayout>